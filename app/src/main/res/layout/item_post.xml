<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_post"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardElevation="4dp"
        app:cardCornerRadius="8dp"
        app:cardBackgroundColor="@color/ui_02">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingStart="12dp"
        android:paddingTop="12dp"
        android:paddingEnd="8dp"
        android:paddingBottom="12dp">

        <TextView
            android:id="@+id/tv_title"
            style="@style/Header1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sfmedium"
            android:text="Hello"
            android:textColor="@color/ui_01"
            android:textSize="70px" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_by"
                style="@style/Header2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/tv_author"
                android:fontFamily="@font/sfmedium"
                android:text="Author: "
                android:textSize="16dp"
                android:textColor="@color/ui_01" />

            <TextView
                android:id="@+id/tv_author"
                style="@style/Header2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_toEndOf="@id/tv_by"
                android:fontFamily="@font/ubuntub"
                android:text="myname"
                android:textColor="@color/main_01" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/sfmedium"
            android:text="2 weeks ago"
            android:textColor="@color/ui_01"
            android:textSize="16sp" />

        <RelativeLayout
            android:id="@+id/main_part"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_body"
                style="@style/Body1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_weight="1"
                android:text="I am body text"
                android:fontFamily="@font/interlight"
                android:textColor="@color/text_03" />

            <LinearLayout
                android:id="@+id/right_bar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerInParent="true"
                android:layout_gravity="end"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/favorite"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="end"
                    android:layout_marginTop="5dp"
                    android:padding="2dp"
                    android:src="@drawable/heart_icon_unliked" />

                <TextView
                    android:id="@+id/like_count"
                    android:layout_width="wrap_content"
                    android:layout_height="16dp"
                    android:layout_centerInParent="true"
                    android:text=""
                    android:textColor="@color/main_01"
                    android:textStyle="bold" />


                <ImageView
                    android:id="@+id/iv_comment"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="end"
                    android:layout_marginTop="5dp"
                    android:padding="2dp"
                    android:src="@drawable/icon_share" />

                <TextView
                    android:id="@+id/comment_count"
                    android:layout_width="wrap_content"
                    android:layout_height="16dp"
                    android:layout_centerInParent="true"
                    android:text=""
                    android:textColor="@color/main_01"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/iv_views"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="end"
                    android:layout_marginTop="5dp"
                    android:padding="2dp"
                    android:src="@drawable/eye" />

                <TextView
                    android:id="@+id/views_count"
                    android:layout_width="wrap_content"
                    android:layout_height="16dp"
                    android:layout_centerInParent="true"
                    android:text=""
                    android:textColor="@color/main_01"
                    android:textStyle="bold" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
    </androidx.cardview.widget.CardView>
</FrameLayout>
